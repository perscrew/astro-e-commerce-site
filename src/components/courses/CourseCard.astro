---
import { type Course } from "../../models/course";
import { formatPrice } from "../../utils/price.utils";
import Button from "../common/Button.astro";
interface Props {
  course: Course;
}

const {
  course: { slug, title, image, price },
} = Astro.props;
---

<li class="course-card">
  <a class="course-link" href={`/courses/${slug}`}>
    <img src={image.src} alt={image.alt} class="course-card__img" />
    <div class="course-card__info">
      <h3>{title}</h3>
      <p class="course-card__price">{formatPrice(price)}</p>
    </div>
    <div class="course-card__actions">
      <Button>Ajouter au panier</Button>
    </div>
  </a>
</li>

<style>
  .course-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    height: 100%;
  }

  .course-card:hover {
    background-color: #f8fafc;
  }

  .course-card {
    width: 276px;
    list-style-type: none;
    border-radius: 0.5rem;
    border: 1px solid #cbd5e1;
  }

  .course-card__img {
    object-fit: cover;
    width: 100%;
    height: 10rem;
    border-top-left-radius: 0.5rem;
    border-top-right-radius: 0.5rem;
  }

  .course-card__info {
    margin-inline: 1rem;
    height: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
  }

  h3 {
    margin-top: 1rem;
    flex: 1;
  }

  .course-card__price {
    font-size: 1.4rem;
    color: var(--tertiary);
    font-weight: bold;
    align-self: flex-end;
  }

  .course-card__cart_icon {
    width: 2rem;
    height: 2rem;
  }

  .course-card__actions {
    margin-top: auto;
    display: flex;
    justify-content: center;
    align-items: end;
    margin-bottom: 0.8rem;
  }
</style>
